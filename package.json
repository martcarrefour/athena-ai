{
  "name": "athena-ai",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/martcarrefour/athena-ai.git"
  },
  "version": "0.0.8",
  "description": "Athena is a lightweight and developer-friendly library for interacting with Large Language Models (LLMs) like OpenAI, Anthropic, and Google PaLM. It provides a unified interface for managing multi-turn conversations, handling JSON or text-based responses, and simplifying API integrations.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "example": "tsc && node dist/examples/openai-example.js",
    "publish:npm": "npm run clean && npm run build && npm publish",
    "example:google-default": "tsx examples/google/default.ts",
    "example:google-function": "tsx examples/google/function.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "typescript",
    "llm",
    "ai",
    "sdk",
    "integration",
    "ai tools",
    "nlp",
    "language models",
    "openai",
    "anthropic",
    "google gemini",
    "ai sdk",
    "llm library",
    "ai integration",
    "chatgpt",
    "ai assistants",
    "context management",
    "conversation management",
    "json handling",
    "ai development",
    "ai chatbots",
    "data extraction",
    "data processing",
    "ai abstraction",
    "ai applications",
    "llm tools"
  ],
  "author": "Dmitriy Prokushev",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/node": "^22.10.10",
    "athena-ai": "^0.0.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "dotenv": "^16.4.7"
  }
}
