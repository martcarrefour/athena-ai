{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "baseUrl": "./src",

    "moduleResolution": "node",

    "paths": {
      "@/*": ["./*"],
      "@drivers/*": ["drivers/*"],
      "@utils/*": ["utils/*"],
      "@types/*": ["types/*"]
    }
  },
  "include": ["src/**/*.ts"],

  "exclude": ["node_modules", "dist", "examples"]
}
