{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "baseUrl": "./src",

    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"],

  "exclude": ["node_modules", "dist", "examples"]
}
